{% extends 'base.html.twig' %}
{% block title %}Symrecipe - mes Ingredients {% endblock %}
{% block body %}
<div class="container">
    {% if not ingredients.items is same as ([]) %}
    <h1>Mes Ingredients</h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <div class="navigation d-flex justify-content-center">
                    {{ knp_pagination_render(ingredients) }}
                </div>
                <div class="count"> {{ ingredients.getTotalItemCount }} ingredients au total</div>
            </tr>
            <tr class="table-dark">
                <th scope="col">id</th>
                <th scope="col">name</th>
                <th scope="col">price</th>
                <th scope="col">created At</th>
            </tr>
        </thead>
        <tbody>

            {% for ing in ingredients %}
            <tr>
                <th scope="row">{{ing.id}}</th>
                <td>{{ing.name}}</td>
                <td>{{ing.price}}</td>
                <td>{{ing.createdAt |date("m/d/Y")}}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {% else %}
    <h1>IL n'y a aucun ingr√©dient</h1>
    {% endif %}

</div>
{% endblock %}